<!DOCTYPE html>
<html>
<head>
  <title>Chart Page</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>
    body {
      font-family: Arial, sans-serif;
      font-size: 16px;
      margin: 0;
      padding: 20px;
    }

    h1 {
      font-size: 24px;
      margin-bottom: 20px;
    }

    .chart-container {
      width: 100%;
      max-width: 1000px;
      height: 800px;
      margin-bottom: 20px;
    }

    /* Media query for mobile devices */
    @media (max-width: 600px) {
      .chart-container {
        max-width: 400px;
        height: 500px;
      }
    }
  </style>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
  <h1>Chart Page</h1>
  <div class="chart-container">
    <canvas id="chartCanvas"></canvas>
  </div>

  <h2>Data Values:</h2>
  <ul>
    <% for (var i = 0; i < chartConfig.data.labels.length; i++) { %>
      <li><strong><%= chartConfig.data.labels[i] %>:</strong> <%= chartConfig.data.datasets[0].data[i] %></li>
    <% } %>
  </ul>

  <a href="/input">Go Back to Input Form</a>

  <script>
    var ctx = document.getElementById('chartCanvas').getContext('2d');
    var chartConfig = <%- JSON.stringify(chartConfig) %>;

    // Set y-axis maximum value to 100
    chartConfig.options.scales.y.max = 100;

    new Chart(ctx, chartConfig);
  </script>
</body>
</html>
